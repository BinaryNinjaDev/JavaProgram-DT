// a. Code reuseability
//b. Dynamic Binding or runtime polymorphism or method overriding
public class child1 {
	int  x;
	int  y;
	
	void show() {
		System.out.println(x);
		System.out.println(y);
	}
	class child1 extends Base1{
		void get(int x, int y) {
			this.x=x;
			this.y=y;
		}
	}

	public static void main(String[] args) {
	   Base1 x = new Base1();
	}

}
